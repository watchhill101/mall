.SortingOrderPage {
  padding: 24px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.SortingOrderPage .header {
  margin-bottom: 16px;
}

.SortingOrderPage .header .searchBox {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.SortingOrderPage .header .searchBox .ant-form {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
}

.SortingOrderPage .header .searchBox .ant-form .ant-form-item {
  margin-bottom: 0;
}

.SortingOrderPage .header .searchBox .ant-form .ant-btn {
  margin-left: 8px;
}

.SortingOrderPage .operation-section {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16px;
}

.SortingOrderPage .operation-section .ant-btn {
  border-radius: 6px;
  padding: 0 20px;
}

.SortingOrderPage .ant-table-wrapper {
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.SortingOrderPage .ant-table-wrapper .ant-table {
  border-radius: 6px;
}

.SortingOrderPage .ant-table-wrapper .ant-table .ant-table-thead > tr > th {
  background-color: #fafafa;
  font-weight: bold;
}

.SortingOrderPage .ant-table-wrapper .ant-table .ant-table-tbody > tr > td {
  vertical-align: middle;
}

.SortingOrderPage .ant-table-wrapper .ant-table .ant-space a {
  color: #1890ff;
  transition: all 0.3s;
}

.SortingOrderPage .ant-table-wrapper .ant-table .ant-space a:hover {
  color: #40a9ff;
}
